/* Desktop and laptop styles - hamburger menu hidden */
@media (min-width: 969px) {
  .hamburger-menu {
    display: none;
  }
  
  /* Ensure nav-links are visible on desktop */
  .nav-links {
    display: flex !important;
  }
}

/* Tablet and mobile responsive design */
@media (max-width: 968px) {
  .hamburger-menu {
    display: block;
  }
  
  /* Hide desktop navigation items that should be in hamburger */
  .nav-links .nav-link {
    display: none;
  }
  
  /* Keep login/register buttons visible but make them smaller */
  .nav-links .btn {
    padding: 8px 16px !important;
    font-size: 14px !important;
    margin: 0 4px !important;
  }
  
  /* Ensure navbar stays flexible on mobile */
  .navbar-content {
    flex-direction: row !important;
    gap: 10px !important;
    justify-content: space-between;
  }
  
  /* Logo adjustments */
  .logo {
    font-size: 20px !important;
  }
}

/* Mobile phone adjustments */
@media (max-width: 480px) {
  .mobile-nav {
    width: 100vw;
    right: -100vw;
  }
  
  .hamburger-button {
    padding: 8px;
  }
  
  .hamburger-line {
    width: 22px;
    height: 2px;
  }
  
  /* Hide login/register buttons on very small screens */
  .nav-links .btn {
    display: none !important;
  }
  
  /* Logo further reduction */
  .logo {
    font-size: 18px !important;
  }
  
  /* Make navbar more compact */
  .navbar {
    padding: 10px 0 !important;
  }
  
  .navbar-content {
    padding: 0 15px !important;
  }
}